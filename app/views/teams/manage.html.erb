<!-- app/views/teams/manage.html.erb -->
<% content_for :sidebar do %>
  <%= render "teams/sidebar" %>
<% end %>

<h1 class="text-xl font-bold mb-4">メンバー管理: <%= @team.name %></h1>

<%# --- 所属メンバー一覧 --- %>
<div class="bg-white p-6 rounded-lg border mb-8">
  <h2 class="text-sm font-bold text-gray-700 mb-4 uppercase tracking-wider">所属メンバー</h2>
  <table class="w-full text-sm">
    <thead>
      <tr class="border-b">
        <th class="text-left py-2 px-2">プロフィール</th>
        <th class="text-left py-2 px-2">役割</th>
        <th class="text-left py-2 px-2"></th>
      </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr class="border-b border-gray-50 hover:bg-gray-50">
          <td class="py-3 px-2">
            <%= profile_chip(membership.profile, size: :xs) %>
          </td>
          <td class="py-3 px-2">
            <% if membership.admin? %>
              <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-[10px] rounded-full font-bold">管理者</span>
            <% else %>
              <span class="px-2 py-0.5 bg-gray-100 text-gray-600 text-[10px] rounded-full">メンバー</span>
            <% end %>
          </td>
          <td class="py-3 px-2 text-right">
            <%# 必要に応じて、ここで退会ボタンや権限変更ボタンを追加 %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%# --- 届いている参加申請（個人→チーム） --- %>
<div class="bg-white p-6 rounded-lg border mb-8">
  <h2 class="text-sm font-bold text-gray-700 mb-4 uppercase tracking-wider text-amber-600">届いている参加申請</h2>
  <% if @incoming_join_requests.any? %>
    <table class="w-full text-xs">
      <tbody>
        <% @incoming_join_requests.each do |req| %>
          <tr class="border-b">
            <td class="py-3">
              <%= profile_chip(req.requester_profile, size: :xs) %>
              <% if req.admin? %>
                <span class="ml-2 text-[9px] px-1 bg-amber-100 text-amber-700 rounded font-bold">管理者権限希望</span>
              <% end %>
            </td>
            <td class="py-3 text-right">
              <div class="flex justify-end gap-2">
                <%= button_to "承認", approve_membership_request_path(req), method: :patch,
                              class: "px-3 py-1 bg-blue-600 text-white rounded font-bold hover:bg-blue-700" %>
                <%= button_to "却下", membership_request_path(req), method: :delete,
                              form: { data: { turbo_confirm: "申請を却下しますか？" } },
                              class: "px-3 py-1 bg-white border border-red-200 text-red-600 rounded hover:bg-red-50" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-xs text-gray-400">現在、届いている参加申請はありません。</p>
  <% end %>
</div>

<%# --- プロフィール検索（個人を招待する） --- %>
<%# --- プロフィール検索（個人を招待する） --- %>
<div class="bg-white p-6 rounded-lg border mb-6">
  <h2 class="text-sm font-bold text-gray-700 mb-4 uppercase tracking-wider">メンバーを招待</h2>
  
  <%= form_with url: manage_team_path(@team), method: :get, local: true, class: "flex items-end gap-2 mb-6" do %>
    <div class="flex-1 max-w-xs">
      <label class="block text-[10px] text-gray-400 mb-1 uppercase font-bold">プロフィールIDで検索</label>
      <%= text_field_tag :profile_invite_token, params[:profile_invite_token], 
                        placeholder: "例: ABC1234",
                        class: "border border-gray-300 rounded px-3 py-2 text-sm w-full focus:ring-2 focus:ring-blue-500 outline-none" %>
    </div>
    <%= submit_tag "検索", class: "px-4 py-2 text-sm bg-gray-800 text-white rounded hover:bg-black cursor-pointer transition-colors" %>
  <% end %>

  <% if @found_profile %>
    <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <%# すでに pending の招待があるかチェック %>
      <% current_invitation = @outgoing_invitations.find { |i| i.target_profile_id == @found_profile.id } %>
      
      <div class="flex items-center justify-between flex-wrap gap-4">
        <div class="flex items-center gap-3">
          <%= profile_chip(@found_profile, size: :xs) %>
          <div class="flex flex-col">
            <span class="text-sm font-bold text-gray-800"><%= @found_profile.display_name %></span>
            <span class="text-[11px] text-blue-600">
              <% if current_invitation %>
                既に招待を送信済みです（返答待ち）
              <% else %>
                チームに招待しますか？
              <% end %>
            </span>
          </div>
        </div>

        <% unless current_invitation %>
          <%= form_with url: membership_requests_path, method: :post, class: "flex items-center gap-4" do %>
            <%= hidden_field_tag :direction, "team_to_profile" %>
            <%= hidden_field_tag :team_id, @team.id %>
            <%= hidden_field_tag :target_profile_id, @found_profile.id %>

            <label class="flex items-center gap-2 cursor-pointer group">
              <%= check_box_tag :admin, "1", false, class: "w-4 h-4 rounded border-blue-300 text-blue-600 focus:ring-blue-500" %>
              <span class="text-xs font-bold text-blue-800 group-hover:text-blue-600">管理者として招待</span>
            </label>

            <%= submit_tag "招待を送信", class: "px-4 py-2 bg-blue-600 text-white text-xs font-bold rounded-full hover:bg-blue-700 shadow-sm" %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%# --- 送信済みの招待（返答待ちリスト） --- %>
<div class="bg-white p-6 rounded-lg border">
  <h2 class="text-sm font-bold text-blue-600 mb-4 uppercase tracking-wider flex items-center gap-2">
    <span>送信済みの招待</span>
    <span class="bg-blue-100 text-blue-600 px-2 py-0.5 rounded-full text-[10px]"><%= @outgoing_invitations.count %></span>
  </h2>
  
  <% if @outgoing_invitations.any? %>
    <div class="divide-y divide-gray-100 border-t border-b">
      <% @outgoing_invitations.each do |invitation| %>
        <div class="py-3 flex items-center justify-between">
          <div class="flex items-center gap-3">
            <%= profile_chip(invitation.target_profile, size: :xs) %>
            <div class="flex flex-col">
              <span class="text-xs font-bold text-gray-700"><%= invitation.target_profile.display_name %></span>
              <div class="flex items-center gap-2">
                <span class="text-[9px] text-gray-400"><%= l invitation.created_at, format: :short %> 送信</span>
                <% if invitation.admin? %>
                  <span class="text-[9px] bg-amber-50 text-amber-700 border border-amber-200 px-1.5 py-0.5 rounded font-bold uppercase">管理者枠</span>
                <% end %>
              </div>
            </div>
          </div>
          
          <%= button_to membership_request_path(invitation), 
                        method: :delete, 
                        data: { turbo_confirm: "この招待を取り消しますか？（相手の画面からは消えますが、履歴には残ります）" },
                        class: "text-[11px] text-red-400 hover:text-red-600 font-bold bg-transparent border-0 cursor-pointer" do %>
            取り消す
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-xs text-gray-400 italic py-4">現在、返答待ちの招待はありません。</p>
  <% end %>
</div>