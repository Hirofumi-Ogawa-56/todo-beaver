<!-- app/views/posts/_post.html.erb -->
<div class="bg-white border rounded-xl p-4 hover:bg-gray-50 transition relative group">
  <div class="flex gap-3">
    <div class="shrink-0">
      <%= profile_avatar(post.profile, size: :sm) %>
    </div>

    <div class="flex-1">
        <div class="flex items-center gap-2 flex-wrap">
            <span class="font-bold text-gray-900"><%= post.profile.display_name %></span>
            
            <% if org_name = post.profile.organization_display_name %>
                <span class="text-[10px] text-gray-400">|</span>
                <span class="text-[10px] text-gray-500 bg-gray-100 px-1.5 py-0.5 rounded">
                <%= org_name %>
                </span>
            <% end %>

            <span class="text-xs text-gray-500"><%= l(post.created_at, format: :ja_short) %></span>
        </div>

      <div class="mt-2 text-gray-800 leading-relaxed">
        <%= simple_format(post.body) %>
      </div>

      <div class="flex items-center justify-between mt-4 max-w-sm text-gray-500">
        <%= link_to post_comments_path(post), 
                    data: { action: "click->side-panel#open", side_panel_title_param: "コメント", turbo_frame: "side-panel-frame" },
                    class: "flex items-center gap-2 hover:text-blue-500 transition" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <span class="text-xs"><%= post.comments.count %></span>
        <% end %>

        <button class="flex items-center gap-2 hover:text-green-500 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <span class="text-xs"><%= post.reposts.count %></span>
        </button>

        <% liked = post.liked_by?(current_profile) %>
        <%= button_to post_reactions_path(post, kind: "heart"), 
                    class: "flex items-center gap-2 transition #{liked ? 'text-red-500' : 'hover:text-red-500'}" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="<%= liked ? 'currentColor' : 'none' %>" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
          <span class="text-xs"><%= post.reactions.where(kind: "heart").count %></span>
        <% end %>
      </div>
    </div>
  </div>
</div>