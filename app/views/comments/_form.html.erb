<!-- app/views/comments/_form.html.erb -->
<%= form_with model: [@task, comment], local: true do |f| %>
  <% if comment.errors.any? %>
    <div class="mb-2 p-2 bg-red-50 text-red-700 rounded text-xs">
      <p class="font-semibold"><%= comment.errors.count %>件のエラーがあります。</p>
      <ul class="list-disc list-inside">
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= f.text_area :body,
                    rows: 3,
                    class: "w-full border rounded px-2 py-1 text-sm",
                    placeholder: "コメントを入力..." %>
  </div>

  <!-- ★ ピン留め + ステータス変更 -->
  <div class="mb-2 flex flex-wrap items-center gap-4 text-[11px] text-gray-600">
    <!-- ピン留め -->
    <label class="inline-flex items-center gap-1">
      <%= f.check_box :pinned %>
      <span>このコメントをピン留め（Outcome）にする</span>
    </label>

    <!-- ステータス変更 -->
    <div class="flex items-center gap-1">
      <span>タスクのステータス</span>
      <%= select_tag "comment[task_status]",
                     options_for_select(
                       [["変更しない", ""]] +
                       Task.statuses.keys.map { |k| [k, k] },
                       "" # デフォルトは「変更しない」
                     ),
                     class: "border border-gray-200 rounded px-2 py-1" %>
    </div>
  </div>

  <div class="flex justify-end">
    <%= f.submit "送信",
                 class: "px-3 py-1 bg-blue-600 text-white text-xs rounded hover:bg-blue-700" %>
  </div>
<% end %>
