<!-- app/views/shared/_side_panel.html.erb -->

<div
  data-side-panel-target="panel"
  class="fixed lg:relative top-0 right-0 h-full bg-white lg:shadow-none shadow-lg border-l border-gray-300
         translate-x-full lg:translate-x-0 transition-transform duration-200 ease-out
         flex flex-col z-40 lg:z-0 shrink-0 hidden"
  style="width: 480px;"
>
  <div
    data-side-panel-target="resizeHandle"
    data-action="mousedown->side-panel#startResize"
    class="absolute left-0 top-0 h-full w-1 cursor-col-resize bg-transparent hover:bg-blue-400 transition-colors"
  ></div>

  <div class="flex items-center justify-between px-3 py-2 border-b border-gray-300 flex-none bg-gray-50">
    <h2 class="text-sm font-semibold" data-side-panel-target="title"></h2>
    <button
      type="button"
      class="text-xs text-gray-500 hover:text-gray-800 p-1"
      data-action="click->side-panel#close"
    >
      ✕
    </button>
  </div>

  <div class="flex-1 overflow-y-auto p-3">
    <turbo-frame id="side-panel-frame">
      <p class="text-xs text-gray-400">
        ここに、新規タスク作成フォームなどが表示されます。
      </p>
    </turbo-frame>
  </div>
</div>