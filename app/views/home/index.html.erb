<div class="min-h-screen w-full bg-slate-900 flex items-center justify-center">
  <div class="bg-white rounded-xl shadow-xl p-8 max-w-md w-full">
    <h1 class="text-2xl font-bold mb-4 text-slate-900">
      ToDo Beaver TOP
    </h1>

    <% if user_signed_in? %>
      <p class="mb-4">
        こんにちは、
        <span class="font-semibold"><%= current_user.email %></span> さん 👋
      </p>
      <%= link_to "ログアウト", destroy_user_session_path,
                  data: { turbo_method: :delete },
                  class: "inline-block px-4 py-2 rounded-lg bg-red-500 text-white text-sm font-semibold hover:bg-red-600" %>
    <% else %>
      <p class="mb-4">ログインしていません。</p>
      <%= link_to "ログイン", new_user_session_path,
                  class: "inline-block px-4 py-2 rounded-lg bg-blue-600 text-white text-sm font-semibold hover:bg-blue-700" %>
    <% end %>
  </div>
</div>

