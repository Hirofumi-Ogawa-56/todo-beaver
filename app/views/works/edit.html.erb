<!-- app/views/works/edit.html.erb -->
<div class="max-w-5xl mx-auto py-8 px-4">
  <div class="mb-8 flex justify-between items-end">
    <div>
      <%= link_to "← 一覧に戻る", works_path, class: "text-sm text-gray-500 hover:text-blue-600 transition-colors" %>
      <h1 class="text-3xl font-bold mt-4 text-gray-800">ワークス編集</h1>
    </div>
    <%= button_to "このワークスを削除する", 
                  @work, 
                  method: :delete, 
                  form: { data: { turbo_confirm: "本当に削除しますか？この操作は取り消せません。" } },
                  class: "text-sm text-red-500 hover:text-red-700 font-medium" %>
  </div>

  <div class="bg-white border border-gray-200 rounded-xl p-8 shadow-sm">
    <%= render "form", work: @work %>
  </div>
</div>