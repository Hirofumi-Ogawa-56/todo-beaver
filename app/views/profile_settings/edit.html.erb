<% content_for :sidebar do %>
  <%= render "profile_settings/sidebar" %>
<% end %>

<h1 class="text-xl font-bold mb-4">プロフィール編集</h1>

 <% if @profile %>
  <%= render "profiles/form", profile: @profile %>
<% else %>
  <p class="text-sm text-red-600">
    編集対象のプロフィールが見つかりませんでした。
  </p>
<% end %>
